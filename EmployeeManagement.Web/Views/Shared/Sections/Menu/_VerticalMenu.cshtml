@{
  TempData.Keep();
  string? currentPage = ViewContext.HttpContext.Request.Path;
}

<!-- Menu -->
@* ! Do this simple *@
<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">

  @* ! Hide app brand if navbar-full *@
  <div class='app-brand demo @((@ViewData["navbarFull"] != null && Convert.ToBoolean(@ViewData["navbarFull"])) ? "d-xl-none" : "")'>
    <a asp-controller="Dashboards" asp-action="Index" class="app-brand-link">
      <span class="app-brand-logo demo me-1">  @await Html.PartialAsync("../_Partials/_Macros")</span>
      <span class="app-brand-text demo menu-text fw-semibold ms-2">@TempData.Peek("appName")</span>
    </a>

    <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto">
      <i class="mdi menu-toggle-icon d-xl-block align-middle mdi-20px"></i>
    </a>
  </div>

  <div class="menu-inner-shadow"></div>

  @* ! Full version menu-items *@
  <ul class="menu-inner py-1">
    <!-- Dashboards -->
    <li class='menu-item@(currentPage.EndsWith("/") || currentPage.StartsWith("/Dashboards") ? " active open" : "")'>
      <a href="javascript:void(0);" class="menu-link menu-toggle">
        <i class="menu-icon tf-icons mdi mdi-home-outline"></i>
        <div>Dashboards</div>
        <div class="badge bg-danger rounded-pill ms-auto"></div>
      </a>
      <ul class="menu-sub">

        <li class='menu-item@(currentPage == "/" ? " active" : "")'>
          <a asp-controller="Dashboards" asp-action="Index" class="menu-link">
            <div>Analytics</div>
          </a>
        </li>
        
        </li>
      </ul>
    </li>
        <!-- HR -->
        <li class='menu-item@(currentPage.StartsWith("/AddEmployee") ? " active open" : "")'>
            <a href="javascript:void(0)" class="menu-link menu-toggle">
                <i class="menu-icon tf-icons mdi mdi-star-outline"></i>
                <div>HR</div>
            </a>
            <ul class="menu-sub">
                <li class='menu-item@(currentPage == "/AddEmployee/AddEmployeeDetails" ? " active" : "")'>
                    <a asp-controller="AddEmployee" asp-action="AddEmployeeDetails" class="menu-link">
                        <div>AddEmployee</div>
                    </a>
                </li>
                <li class='menu-item@(currentPage == "/Attendances/Index" ? " active" : "")' >
                    <a asp-controller="Attendances" asp-action="Index" class="menu-link" onclick="getAttendanceDataInTableFormat()">
               <div>Attendances</div>
             </a>
            </li>

            </ul>
        </li>   
        
        
        <!-- Finance -->
        <li class='menu-item@(currentPage.StartsWith("/Finance") ? " active open" : "")'>
            <a href="javascript:void(0)" class="menu-link menu-toggle">
                <i class="menu-icon tf-icons mdi mdi-star-outline"></i>
                <div>Finance</div>
            </a>
            <ul class="menu-sub">
                <li class='menu-item@(currentPage == "/Finance/Salary" ? " active" : "")'>
                    <a asp-controller="Finance" asp-action="Salary" class="menu-link" >
                        
                        <div>Salary</div>
                    </a>
                </li>
                <li class='menu-item@(currentPage == "/Finance/Index" ? " active" : "")'>
                    <a asp-controller="Finance" asp-action="Advance" class="menu-link" >
                        <div>Advance</div>
                    </a>
                </li>

            </ul>
        </li>


   
  </ul>

</aside>
<!-- / Menu -->
