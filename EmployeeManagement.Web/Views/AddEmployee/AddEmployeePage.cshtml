@{
    ViewBag.Title = "Add Employee";
}


<div class="border border-2 rounded p-3">

    <form class="row g-3" id="EmployeeAllDetails">
        <!-- Personal Info added -->
        <div class="col-12">
            <h6>1. Personal Info </h6>
            <hr class="mt-0" />
        </div>

        <div class="col-md-6">
            <label for="inputEmpID" class="form-label">Employee ID</label>
            <input type="text" class="form-control" id="inputEmpID" name="empID" value="@ViewBag.NextEmpID">
            <span id="empID-error" style="color: red;"></span>
        </div>

        <div class="col-md-6">
            <label for="inputPhone" class="form-label">Phone</label>
            <input type="text" class="form-control" id="inputPhone" name="phone">
            <span id="phone-error" style="color: red;"></span>
        </div>

        <div class="col-md-6">
            <label for="inputFirstName" class="form-label">First Name</label>
            <input type="text" class="form-control" id="inputFirstName" name="firstName">
            <span id="fname-error" style="color: red;"></span>
        </div>

        <div class="col-md-6">
            <label for="inputLastName" class="form-label">Last Name</label>
            <input type="text" class="form-control" id="inputLastName" name="lastName">
            <span id="lname-error" style="color: red;"></span>
        </div>

        <div class="col-md-6">
            <label for="inputDesignation" class="form-label">Designation</label>
            <input type="text" class="form-control" id="inputDesignation" name="designation">
            <span id="designation-error" style="color: red;"></span>
        </div>

        <div class="col-md-6">
            <label for="inputExperience" class="form-label">Experience</label>
            <input type="text" class="form-control" id="inputExperience" name="experience">
            <span id="experience-error" style="color: red;"></span>
        </div>

        <div class="col-md-6">
            <label for="inputDateOfBirth" class="form-label">Date of Birth</label>
            <input type="date" class="form-control" id="inputDateOfBirth" name="dateOfBirth">
            <span id="dob-error" style="color: red;"></span>
        </div>

        <div class="col-md-6">
            <label for="inputDateOfJoin" class="form-label">Date of Joining</label>
            <input type="date" class="form-control" id="inputDateOfJoin" name="dateOfJoin">
            <span id="doj-error" style="color: red;"></span>
        </div>

        <div class="col-md-6">
            <label for="inputAddress" class="form-label">Address</label>
            <input type="text" class="form-control" id="inputAddress" name="address">
            <span id="address-error" style="color: red;"></span>
        </div>

        <div class="col-md-6">
            <label for="inputPinCode" class="form-label">Pin Code</label>
            <input type="text" class="form-control" id="inputPinCode" name="pinCode">
            <span id="pinCode-error" style="color: red;"></span>
        </div>




        <div class="col-md-6">
            <label for="inputFamilyContactNumber" class="form-label">FamilyContactNumber</label>
            <input type="text" class="form-control" id="inputFamilyContactNumber" name="familyContactNumber">
            <span id="familyContactNumber-error" style="color: red;"></span>
        </div>

        <div class="col-md-6">
            <label for="inputNature" class="form-label">Nature</label>
            <input type="text" class="form-control" id="inputNature" name="nature">
            <span id="nature-error" style="color: red;"></span>
        </div>

        <div class="col-md-6">
            <label for="inputCity" class="form-label">City</label>
            <input type="text" class="form-control" id="inputCity" name="city">
            <span id="city-error" style="color: red;"></span>
        </div>

        <div class="col-md-4">
            <label for="inputState" class="form-label">State</label>
            <select id="inputState" class="form-select" name="state">
                <option selected>Choose...</option>

            </select>
            <span id="state-error" style="color: red;"></span>
        </div>


        <!-- Account Details added -->
        <div class="col-12">
            <h6 font-size: large; font-weight: bold;>2. Account Details</h6>
            <hr class="mt-0" />
        </div>

        <div class="col-md-6">
            <label for="inputPanNumber" class="form-label">Pan Number</label>
            <input type="text" class="form-control" id="inputPanNumber" name="panNumber">
            <span id="panNumber-error" style="color: red;"></span>
        </div>

        <div class="col-md-6">
            <label for="inputAadhaarCard" class="form-label">Aadhaar Card</label>
            <input type="text" class="form-control" id="inputAadhaarCard" name="aadhaarCard">
            <span id="aadhaarCard-error" style="color: red;"></span>
        </div>

        <div class="col-md-6">
            <label for="inputContactSite" class="form-label">Contact Site</label>
            <input type="text" class="form-control" id="inputContactSite" name="contactSite">
            <span id="contactSite-error" style="color: red;"></span>
        </div>

        <div class="col-md-6">
            <label for="inputBankName" class="form-label">Bank Name</label>
            <input type="text" class="form-control" id="inputBankName" name="bankName">
            <span id="bankName-error" style="color: red;"></span>
        </div>

        <div class="col-md-6">
            <label for="inputBankAddress" class="form-label">Bank Address</label>
            <input type="text" class="form-control" id="inputBankAddress" name="bankAddress">
            <span id="bankAddress-error" style="color: red;"></span>
        </div>

        <div class="col-md-6">
            <label for="inputAccountNumber" class="form-label">Account Number</label>
            <input type="text" class="form-control" id="inputAccountNumber" name="accountNumber">
            <span id="accountNumber-error" style="color: red;"></span>
        </div>

        <div class="col-md-6">
            <label for="inputIFSC" class="form-label">IFSC</label>
            <input type="text" class="form-control" id="inputIFSC" name="ifsc">
            <span id="ifsc-error" style="color: red;"></span>
        </div>

        <div class="col-md-6">
            <label for="inputSalary" class="form-label">Salary</label>
            <input type="text" class="form-control" id="inputSalary" name="salary">
            <span id="salary-error" style="color: red;"></span>
        </div>





        <div class="col-md-6">
            <label for="inputEsiNumber" class="form-label">ESI Number</label>
            <input type="text" class="form-control" id="inputEsiNumber" name="esiNumber">
            <span id="esiNumber-error" style="color: red;"></span>
        </div>

        <div class="col-md-6">
            <label for="inputVanNumber" class="form-label">VAN Number</label>
            <input type="text" class="form-control" id="inputVanNumber" name="vanNumber">
            <span id="vanNumber-error" style="color: red;"></span>
        </div>



        <div class="col-md-6">
            <label for="inputPFNumber" class="form-label">PF Number</label>
            <input type="text" class="form-control" id="inputPFNumber" name="pfNumber">
            <span id="pfNumber-error" style="color: red;"></span>
        </div>

        <div class="col-md-6">
            <label for="inputWorkingHours" class="form-label">Working Hours(HH:mm)</label>
            <input type="text" class="form-control" id="inputWorkingHours" name="workingHours" placeholder="HH:MM">
            <span id="workingHours-error" style="color: red;"></span>
        </div>

        <div class="col-12">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck" name="checkMeOut">
                <label class="form-check-label" for="gridCheck">
                    Check me out
                </label>
                <span id="checkMeOut-error" style="color: red;"></span>
            </div>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary">Sign in</button>
            <button type="button" class="btn btn-secondary" id="cancelButtonBackPage">Cancel</button>
        </div>
    </form>

    <div id="successMessageContainer" class="alert alert-success" style="display: none;">
        <strong>Success!</strong> Employee added successfully!
    </div>
</div>
</div>
<partial name="_Confirmation_Modal" />

<script src="~/js/addemployeepage.js"></script>

